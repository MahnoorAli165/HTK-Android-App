<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorLightBlue" />

            <!-- Focused and not pressed -->
            <item android:state_focused="true" android:state_pressed="false" android:color="@color/colorLightBlue" />

            <!-- Focused and pressed -->
            <item android:state_focused="true" android:state_pressed="true" android:color="@color/colorDarkBlue" />

            <!-- Unfocused and pressed -->
            <item android:state_focused="false" android:state_pressed="true" android:color="@color/colorLightBlue" />

            <!-- Default color -->
            <item android:color="@color/colorLightBlue" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/colorLightBlue" android:endColor="@color/colorLightBlue" android:angle="270" />
            <corners android:radius="150dp" />
        </shape>
    </item>
</selector>