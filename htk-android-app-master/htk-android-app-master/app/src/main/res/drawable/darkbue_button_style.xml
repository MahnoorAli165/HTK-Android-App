<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorLightBlue" />
            <stroke android:width="2dp" android:color="@color/colorDarkBlue" />
            <corners android:radius="150dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/colorDarkBlue" android:endColor="@color/colorDarkBlue" android:angle="270" />
            <corners android:radius="150dp" />
        </shape>
    </item>
</selector>